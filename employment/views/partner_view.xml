<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_property_form" model="ir.ui.view">
        <field name="name">res.partner.property.form.inherit</field>
        <field name="model">res.partner</field>
        <field name="priority">2</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <page name="contact_addresses" position="after">
                <page name="employees" string="Employees" invisible="not is_company">
                    <field name="employee_ids" mode="tree">
                        <tree>
                            <field name="partner_id"/>
                            <field name="email"/>
                            <field name="employee_id"/>
                            <field name="state"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
                <page name="companies" string="Companies" invisible="is_company">
                    <field name="company_ids" mode="tree">
                        <tree>
                            <field name="company_partner_id"/>
                            <field name="email"/>
                            <field name="employee_id"/>
                            <field name="state"/>
                            <field name="active"/>
                        </tree>
                    </field>
                </page>
            </page>
        </field>
    </record>
</odoo>
